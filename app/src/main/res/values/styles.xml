<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Primary button style - soft pink with rounded corners -->
    <style name="AppPrimaryButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- Card style - white surface with rounded corners and soft shadow -->
    <style name="AppCardStyle">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/surface_white</item>
    </style>

    <!-- Title text style - accent purple, large, bold -->
    <style name="AppTitleText">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/accent_purple</item>
    </style>

</resources>
