<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/surface_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvScoreGame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Memory Match"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/accent_purple" />

            <TextView
                android:id="@+id/tvScoreDifficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Easy (4x4)"
                android:textSize="14sp"
                android:textColor="@color/pink_primary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/tvScoreTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01:23"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/accent_purple" />

            <TextView
                android:id="@+id/tvScoreMoves"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 moves"
                android:textSize="14sp"
                android:textColor="@color/pink_primary" />

            <TextView
                android:id="@+id/tvScoreDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024-01-01"
                android:textSize="12sp"
                android:textColor="@color/lavender_secondary" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
